<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item
        android:top="0dp"
        android:left="0dp"
        android:bottom="0dp"
        android:right="0dp">
        <shape android:shape="rectangle">

            <corners
                android:bottomRightRadius="12dp"
                android:bottomLeftRadius="12dp"
                android:topLeftRadius="12dp"
                android:topRightRadius="12dp"/>

            <stroke
                android:width="0dp"
                android:color="#000"/>

            <padding
                android:left="0dp"
                android:right="0dp"
                android:top="0dp"
                android:bottom="0dp"/>

            <gradient
                android:type="linear"
                android:gradientRadius="250"
                android:startColor="#ff545455"
                android:centerColor="#ff474748"
                android:endColor="#ff383839"
                android:centerX="0.2"
                android:centerY="0.3"
                android:angle="270" />

            <size android:width="100dp" android:height="100dp"/>

        </shape>
    </item>

    <item
        android:top="2dp"
        android:left="2dp"
        android:bottom="2dp"
        android:right="2dp">

        <shape android:shape="rectangle">

            <corners
                android:bottomRightRadius="10dp"
                android:bottomLeftRadius="10dp"
                android:topLeftRadius="10dp"
                android:topRightRadius="10dp"/>

            <stroke
                android:width="0dp"
                android:color="#000"/>

            <padding
                android:left="0dp"
                android:right="0dp"
                android:top="0dp"
                android:bottom="0dp"/>

            <gradient
                android:type="linear"
                android:gradientRadius="250"
                android:startColor="#ffffffff"
                android:endColor="#80ffffff"
                android:centerX="0.2"
                android:centerY="0.3"
                android:angle="270" />

            <size android:width="100dp" android:height="100dp"/>

        </shape>
    </item>

</layer-list>